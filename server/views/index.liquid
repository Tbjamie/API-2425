              </defs>
            </svg>

          </button>
        </div>
        <select name="members" id="members">
          {% for user in users %}
            <option value="{{ user._id }}">{{ user.name }}</option>
          {% endfor %}
        </select>
        <button class="create-chat-submit" type="submit">Create chat</button>
